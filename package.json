{
  "name": "@spark-apps/gmail-manager-mcp",
  "version": "1.1.4",
  "description": "A minimal MCP server for Gmail to help you manage, organize, and clean up your inbox",
  "type": "module",
  "main": "dist/index.js",
  "module": "./src/index.ts",
  "bin": {
    "gmail-manager": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "auth": "node dist/index.js auth",
    "debug-auth": "node debug-auth.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "smithery.yaml"
  ],
  "keywords": [
    "gmail",
    "mcp",
    "email",
    "manager",
    "organize",
    "clean",
    "inbox",
    "model-context-protocol"
  ],
  "author": "Gmail Manager MCP",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muammar-yacoob/GMail-Manager-MCP.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "google-auth-library": "^9.4.1",
    "googleapis": "^129.0.0",
    "open": "^10.0.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "graceful-fs": "^4.2.11",
    "typescript": "^5.3.3"
  }
}
